<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <TextView 
           	android:layout_width="match_parent"
           	android:layout_height="47dp"
           	android:background="@android:color/holo_blue_light"
           	android:text="服务配置"
           	android:gravity="center"
           	android:textColor="@android:color/white"
           	android:textSize="@dimen/activity_search_text_size"/>
            
            <EditText 
                android:id="@+id/et_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="请输入要设置的IP地址"/>
            
            <EditText 
                android:id="@+id/et_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="请输入要设置的端口号"/>
            
            <EditText 
                android:id="@+id/et_old_ip_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:hint="请输入旧的IP地址"/>
            
            <EditText 
                android:id="@+id/et_old_port_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:digits="1234567890"  
           		android:inputType="phone|number"
                android:visibility="gone"
                android:hint="请输入旧的端口号"/>
            
            <EditText 
                android:id="@+id/et_ip_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:hint="请输入要修改的IP地址"/>
            
            <EditText 
                android:id="@+id/et_port_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:digits="1234567890"  
           		android:inputType="phone|number"
                android:visibility="gone"
                android:hint="请输入要修改的端口号"/>
            
            <TextView 
                android:id="@+id/tv_show_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:visibility="gone"
                android:gravity="center"
                />
            
            <TextView 
                android:id="@+id/tv_show_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:visibility="gone"
                android:gravity="center"
                />
            
                <Button 
                    android:id="@+id/btn_ok_ip_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                	android:layout_marginRight="20dp"
                    android:text="确认设置"/>
                
                  <Button 
                    android:id="@+id/btn_update_ip_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                     android:layout_marginLeft="20dp"
                	android:layout_marginRight="20dp"
                	android:digits="1234567890"  
           			android:inputType="phone|number"
                	android:gravity="center"
                	android:visibility="gone"
                    android:text="修改IP地址和端口号"/>
                  
                  <Button 
                    android:id="@+id/btn_update_ok_ip_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                     android:layout_marginLeft="20dp"
                	android:layout_marginRight="20dp"
                	android:digits="1234567890"  
           			android:inputType="phone|number"
                	android:gravity="center"
                	android:visibility="gone"
                    android:text="确认修改"/>
                
        </LinearLayout>
        
    </RelativeLayout>
    
		<ImageView 
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <TextView 
           	android:layout_width="match_parent"
           	android:layout_height="47dp"
           	android:background="@android:color/holo_blue_light"
           	android:text="电话设置"
           	android:gravity="center"
           	android:textColor="@android:color/white"
           	android:textSize="@dimen/activity_search_text_size"/>
            
            <EditText 
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:digits="1234567890"  
           		android:inputType="phone|number"
                android:hint="请输入要设置的电话号码"/>
            
            <EditText 
                android:id="@+id/et_old_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:digits="1234567890"  
           		android:inputType="phone|number"
                android:visibility="gone"
                android:hint="请输入旧的电话号码"/>
            
            <EditText 
                android:id="@+id/et_update_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:digits="1234567890"  
           		android:inputType="phone|number"
                android:visibility="gone"
                android:hint="请输入要修改的电话号码"/>
            
            <TextView 
                android:id="@+id/tv_show_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:visibility="gone"
                />
            
                <Button 
                    android:id="@+id/btn_set_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                	android:layout_marginRight="20dp"
                    android:text="确认设置"/>
                
                <Button 
                    android:id="@+id/btn_update_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                	android:layout_marginRight="20dp"
                	android:gravity="center"
                	android:visibility="gone"
                    android:text="修改电话号码"/>
                
                <Button 
                    android:id="@+id/btn_update_ok_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                	android:layout_marginRight="20dp"
                	android:gravity="center"
                	android:visibility="gone"
                    android:text="确认修改"/>
                
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
